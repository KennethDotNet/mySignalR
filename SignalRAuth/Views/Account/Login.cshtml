@model SignalRAuth.ViewModels.LoginViewModel;

<h2>Logg inn</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Login" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Username" class="col-sm-2 control-label"></label>
                    <div class="col-sm-6 col-md-4">
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="col-sm-2 control-label"></label>
                    <div class="col-sm-6 col-md-4">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Logg inn" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
